<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_ground"
    tools:context="qingjiu.qingqingchengshan.cn.qingjiao.activity.LoginActivity">


    <RelativeLayout
        android:id="@+id/login_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center">

        <FrameLayout
            android:id="@+id/username_layout"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="400dp"
            android:gravity="center">

            <EditText
                android:id="@+id/username"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:hint="请输入手机号"
                android:inputType="number"
                android:maxLength="20"
                android:paddingLeft="55dp"
                android:paddingRight="60dp"
                android:textColorHint="#7f7b7b">

            </EditText>

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="left|center_vertical"
                android:layout_marginStart="2dp"
                android:background="@mipmap/user_head"
                android:visibility="visible" />


            <Button
                android:id="@+id/username_clear"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="10dp"
                android:background="@mipmap/clear" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/usercode_layout"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/username_layout"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <EditText
                android:id="@+id/password"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:maxLength="20"
                android:paddingLeft="55dp"
                android:paddingRight="60dp"
                android:textColorHint="#7f7b7b">

            </EditText>

            <ImageView
                android:layout_width="27dp"
                android:layout_height="30dp"
                android:layout_gravity="left|center_vertical"
                android:layout_marginStart="2dp"
                android:background="@mipmap/user_password" />

            <Button
                android:id="@+id/bt_pwd_eye"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="10dp"
                android:background="@mipmap/clear" />

            <Button
                android:id="@+id/bt_pwd_clear"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_marginLeft="225dp"
                android:layout_marginTop="10dp"
                android:background="@mipmap/see"
                android:visibility="visible" />
        </FrameLayout>


        <Button
            android:id="@+id/login_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/forget_password"
            android:layout_alignTop="@+id/forget_password"
            android:layout_marginLeft="250dp"
            android:background="#00000000"
            android:gravity="center"
            android:text="忘记密码?"
            android:textColor="#5d5a5a"
            android:textSize="15sp" />

        <CheckBox
            android:id="@+id/forget_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/usercode_layout"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp"
            android:background="#00000000"
            android:gravity="center"
            android:text="记住密码"
            android:textColor="#5d5a5a"
            android:textSize="16sp" />

        <Button
            android:id="@+id/login"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_below="@id/usercode_layout"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="55dp"
            android:background="#00000000"
            android:gravity="center"
            android:text="登录"
            android:textColor="#595656"
            android:textSize="22sp" />


        <TextView
            android:id="@+id/register_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/login"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="15dp"
            android:background="#00000000"
            android:gravity="center"
            android:text="没有账号？快去注册一个吧" />

        <Button
            android:id="@+id/register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/register_text"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="10dp"
            android:background="#00000000"
            android:gravity="center"
            android:text="注册"
            android:textColor="#5d5a5a"
            android:textSize="18sp"
            android:visibility="visible" />
    </RelativeLayout>


</LinearLayout>
